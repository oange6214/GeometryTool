<Application
    x:Class="MainGui.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MainGui"
    xmlns:vm="clr-namespace:MainGui.Mvvm.ViewModels">

    <Application.Resources>
        <ResourceDictionary>

            <vm:ViewModelLocator x:Key="Locator" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/Resources/ColorsStyle.xaml" />
                <ResourceDictionary Source="Assets/Resources/TabControlStyle.xaml" />
                <ResourceDictionary Source="Assets/Resources/ButtonStyle.xaml" />
                <ResourceDictionary Source="Assets/Resources/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="Assets/Resources/ToolBarImage.xaml" />
                <ResourceDictionary Source="Assets/Resources/LabelStyle.xaml" />
                <ResourceDictionary Source="Assets/Resources/GeometryChromeStyle.xaml" />
                <ResourceDictionary Source="Assets/Resources/ResizeRotateChromeStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
